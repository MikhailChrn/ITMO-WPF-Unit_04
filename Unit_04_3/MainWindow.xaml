<Window x:Class="Unit_04_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unit_04_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="175" Width="200">
    <Grid>
        <GroupBox Margin="10" VerticalAlignment="Top">
            <GroupBox.Header>
                <Button Content="GroupBox"/>
            </GroupBox.Header>
                <StackPanel>
                <RadioButton Content="RadioButton 1" Margin="3"/>
                <RadioButton Content="RadioButton 2" Margin="3"/>
                <RadioButton Content="RadioButton 3" Margin="3"/>

                <Button Width="100" HorizontalAlignment="Left" Margin="3" Padding="3">
                    Ok
                </Button>

            </StackPanel>
           
        </GroupBox>

    </Grid>
</Window>
